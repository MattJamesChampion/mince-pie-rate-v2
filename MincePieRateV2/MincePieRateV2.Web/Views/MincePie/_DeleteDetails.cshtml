@model MincePieRateV2.Models.Domain.MincePie

@{ 
    var imagePath = (string)ViewData["ImagePath"];
}

@if (!string.IsNullOrWhiteSpace(imagePath))
{
    <img class="img" src="@Url.Content(imagePath)" />
}

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Brand)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Brand)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
</dl>