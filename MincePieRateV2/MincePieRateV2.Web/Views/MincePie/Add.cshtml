@model MincePieRateV2.Models.Domain.MincePie

@{
    ViewData["Title"] = "Add Mince Pie";
}

<h1>Add Mince Pie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" enctype="multipart/form-data">
            @await Html.PartialAsync("_AddEdit", Model)
            <input type="file" accept="image/*" name="mincePieImage" class="form-control">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
